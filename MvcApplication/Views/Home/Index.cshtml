@{
    ViewBag.Title = "Home Page";
}
@section featured {
    <div class="container-fluid">
        <div class="content-wrapper">
            <hgroup class="title">
                <h1>@ViewBag.Title.</h1>
                <h2>@ViewBag.Message</h2>
            </hgroup>
            <div class="panel panel-primary">
                <div class="panel-heading">Today's Info @DateTime.Now.ToString("D")</div>
                <div class="panel-body">
                    <div class="col-md-12">
                        <div class="col-md-6">
                            <p>Today's Weather info goes here</p>
                        </div>

                        <div class="col-md-6">
                            <p>Here goes some information about today. (example: today is president's day. 45th day of the year. 7th week of the year.)</p>
                        </div>
                    </div>

                    <div class="col-md-12">
                        <p>Different clocks go here. (Local Clock OKC)
                           Clocks for other cities around the world (New York, London, Dubai, Mumbai)
                        </p>
                    </div>

                    <div class="col-md-12">
                        <div class="col-md-6">
                            <p>Here goes today's exercise information.</p>
                        </div>
                        <div class="col-md-6">
                            <p>Here goes today's caloric intakes. Body Weight.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

